@import './variables.styl'

html, body
  padding 0
  margin 0
  background-color $white
  font-size $base
  font-family -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif

*
  box-sizing border-box

h1
  font-size $5xl

h2
  font-size $4xl

h3
  font-size $3xl

h4
  font-size $2xl

h5
  font-size $xl
